-ifndef(MARKDOWN_EVENT_HRL).
-define(MARKDOWN_EVENT_HRL, 1).

%% Macros
-define(is_markdown_event_name(X),
(~J{ set name_macro_continue = joiner(" orelse ") }.
~J{ for name in ctx.event.name_list }.
    ~J< name_macro_continue() >.(X) =:= ~J< name.key >.
~J{ endfor }.)).

-define(is_markdown_event_void(X),
(~J{ set void_macro_continue = joiner(" orelse ") }.
~J{ for void in ctx.event.void_list }.
    ~J< void_macro_continue() >.(X) =:= ~J< void.key >.
~J{ endfor }.)).

-endif.
